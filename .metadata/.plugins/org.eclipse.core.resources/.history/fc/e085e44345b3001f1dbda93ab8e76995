package DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import Model.Employee;

public class EmployeeDAOimpl implements EmployeeDAOI {
    private Connection connection;

    public EmployeeDAOimpl() {
        setConnection(DBConnection.getConnection());
    }

    @Override
    public void addEmployee(Employee employee) {
        String sql = "INSERT INTO ememployee (nom, prenom, email, phone, salaire, role, poste) VALUES (?, ?, ?, ?, ?, ?, ?)";

        try (PreparedStatement stmt = connection.prepareStatement(sql)) {
            stmt.setString(1, employee.getNom());
            stmt.setString(2, employee.getPrenom());
            stmt.setString(3, employee.getEmail());
            stmt.setString(4, employee.getPhone());
            stmt.setDouble(5, employee.getSalaire());  // Correction du type de salaire
            stmt.setString(6, employee.getRole().toString());  // Enum Role en String
            stmt.setString(7, employee.getPoste().toString());  // Enum Poste en String

            int rowsAffected = stmt.executeUpdate();
            return rowsAffected > 0;  // Retourne true si une ligne a été insérée
        } catch (SQLException e) {
            e.printStackTrace();
            return false;  // Retourne false en cas d'erreur
        }
    }

    public Connection getConnection() {
        return connection;
    }

    public void setConnection(Connection connection) {
        this.connection = connection;
    }
}

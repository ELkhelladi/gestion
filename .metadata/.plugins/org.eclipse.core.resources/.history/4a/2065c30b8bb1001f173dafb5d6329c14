            // Exemple d'utilisation du bouton Ajouter
            view.getAjouterButton().addActionListener(e -> {
                String nom = view.getNom();
                String prenom = view.getPrenom();
                int age = view.getAge();

                if (age != -1) {
                    view.afficherMessageSucces("Personne ajoutée : " + nom + " " + prenom + ", Âge : " + age);
                }
            });
        });
    }
}

public boolean AddEmployee(String nom, String prenom, String email, String phone, float salaire, Role role, Poste poste) {
	if(salaire<=0) {
		System.out.println("erreur:le salaire oit etre posii");
		return false;}
	Employee nv=new Employee(0,nom,prenom,email,phone,salaire,role,poste);
return true;
}
}
